@using KnowledgeHubPortal.Models.Entities
@{
    ViewBag.Title = "Submit";
}

<h2>Submit Article</h2>

<form action="/Articles/Submit" method="post">

    Enter Article Title*<br />
    <input type="text" name="Title" value="" /><br />
    Enter Article URL*<br />
    <input type="text" name="Url" value="" /><br />
    Enter Article Description<br />
    <textarea rows="6" cols="60" name="description"></textarea><br />
    Select Catagory<br />
                   <select name="CatagoryID">

                       @foreach (var item in ViewBag.CatagoryId as List<Catagory>)
                       {
                       <option value="@item.CatagoryID">@item.Title</option>
                       }
                       
                       
                   </select>
    <br />
    <input type="submit" name="btnsubmit" value="Submit" />



</form>



